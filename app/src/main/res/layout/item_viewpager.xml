<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="360dp"
    android:layout_gravity="center"
    app:cardCornerRadius="5dp"
    app:cardUseCompatPadding="true"
    app:elevation="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_marginLeft="@dimen/title_padding_lr"
        android:layout_marginRight="@dimen/title_padding_lr"
        android:layout_marginTop="@dimen/title_padding_top"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/text_padding_bottom"
        android:layout_marginLeft="@dimen/item_card_view"
        android:layout_marginRight="@dimen/item_card_view"
        android:layout_marginTop="84dp">

        <TextView
            android:id="@+id/txtContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="8dp"
            android:text="Có việc cần đi xa , hoặc dự yến hội , tiệc tùng , đi tiểu luôn thật là bất tiện , nhất là với phái nữ. Có cách sau , khiến suốt ngày không đi tiểu. Nấu Bạch Quả ( tức Ngân Hạnh ) 7 trái , ăn trước khi đi , thì suốt ngày tránh được đi tiểu"
            android:textSize="15sp" />
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_gravity="bottom"
        android:weightSum="5"
        android:baselineAligned="false">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/btn_content_copy" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center">

            <CheckBox
                android:id="@+id/cbx_like"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:button="@drawable/custom_cbx_like" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center">

            <CheckBox
                android:id="@+id/cbx_bookmark"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:button="@drawable/custom_cbx_bookmark" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/btn_comment"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/ic_comment_black" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/btn_share" />
        </RelativeLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>